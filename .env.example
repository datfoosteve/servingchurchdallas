# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key for admin operations (bypasses RLS)
# IMPORTANT: Never expose this key to the client!
# Only use in API routes and server-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================================
# EMAIL CONFIGURATION (RESEND)
# ====================================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_123456789

# The email address that will receive prayer requests and contact form submissions
PRAYER_REQUEST_EMAIL=theservingchurchdallas@gmail.com

# The "from" email address for sending emails
# This should be a verified domain in Resend (e.g., noreply@yourdomain.com)
# For testing, you can use onboarding@resend.dev
RESEND_FROM_EMAIL=noreply@theservingchurch.org

# ====================================
# CLOUDFLARE TURNSTILE (SPAM PROTECTION)
# ====================================
# Get these from https://dash.cloudflare.com/ -> Turnstile
# Public site key (safe to expose to client)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=0x4AAAAAAA...

# Secret key for server-side verification (keep private!)
TURNSTILE_SECRET_KEY=0x4AAAAAAA...

# ====================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ====================================
# Generate VAPID keys using: npx web-push generate-vapid-keys
# Public key (safe to expose to client)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-public-vapid-key-here

# Private key (keep private! Server-side only)
VAPID_PRIVATE_KEY=your-private-vapid-key-here

# Subject should be a mailto: or https: URL
VAPID_SUBJECT=mailto:team@servingchurchdallas.com
